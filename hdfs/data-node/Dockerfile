ARG INPUT_ADOOP_VERSION



FROM adoop/hdfs:${INPUT_ADOOP_VERSION} AS hdfs-data-node

EXPOSE 50010

EXPOSE 50020

EXPOSE 50075


ENV CORE_HDFS__DFS_DATANODE_DATA_DIR /data/dfs/data


RUN mkdir -p ${CORE_HDFS__DFS_DATANODE_DATA_DIR} && \
    chmod -R 777 ${CORE_HDFS__DFS_DATANODE_DATA_DIR}


VOLUME ${CORE_HDFS__DFS_DATANODE_DATA_DIR}


CMD [ "hdfs", "datanode" ]

